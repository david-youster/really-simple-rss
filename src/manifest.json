{

  "manifest_version": 2,
  "name": "Simple RSS",
  "version": "2.0.0",

  "description": "Simple Feed Reader for Firefox",
  "homepage_url": "https://github.com/xdav/really-simple-rss",
  "icons": {
    "48": "images/rss.svg"
  },

  "permissions": [
    "storage",
    "bookmarks",
    "<all_urls>"
  ],

  "background": {
    "scripts": ["service/webex.js", "background.js"]
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js", "model.js"]
    }
  ],

  "browser_action": {
    "default_icon": "images/rss.svg",
    "default_title": "Simple Rss",
    "browser_style": true
  },

  "sidebar_action": {
    "default_icon": "images/rss.svg",
    "default_title": "Simple Rss",
    "default_panel": "index.html"
  },

  "options_ui": {
    "page": "settings.html",
    "browser_style": true
  }
}
